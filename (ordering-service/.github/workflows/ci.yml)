name: Ordering Service CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  use-template:
    uses: gitdigital-products/workflow-templates/.github/workflows/ci-template.yml@main
    with:
      language: node
    secrets:
      GHCR_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      STAGING_SSH_KEY: ${{ secrets.STAGING_SSH_KEY }}
      STAGING_HOST: ${{ secrets.STAGING_HOST }}
      STAGING_USER: ${{ secrets.STAGING_USER }}